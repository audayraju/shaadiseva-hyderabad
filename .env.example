# ─── Database ───────────────────────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shaadiseva
DB_USER=shaadiseva
DB_PASSWORD=shaadiseva

# ─── MinIO (S3-compatible object storage) ───────────────────────────────────
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=shaadiseva-docs

# ─── JWT ─────────────────────────────────────────────────────────────────────
# Generate a strong random secret, e.g.: openssl rand -hex 64
JWT_SECRET=change-me-to-a-long-random-secret-at-least-64-chars-long
JWT_EXPIRY_MS=86400000
JWT_REFRESH_EXPIRY_MS=604800000

# ─── Application ─────────────────────────────────────────────────────────────
# REQUIRED: admin user password (min 12 characters).
# The application will refuse to start if this is blank.
APP_ADMIN_PASSWORD=

# ─── CORS ────────────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:5173
